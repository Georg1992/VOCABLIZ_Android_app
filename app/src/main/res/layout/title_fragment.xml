<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/mainViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2artboard_4"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/LearnWordsPic"
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_weight="0"
            android:contentDescription="@string/BookPicture"
            app:srcCompat="@drawable/ic_final_logo" />

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popUpMenuView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <Button
                android:id="@+id/learnWordsButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="@string/generateButton"
                android:textSize="18sp" />

            <Button
                android:id="@+id/selectLangButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/SelectLang"
                android:textSize="18sp" />

            <Button
                android:id="@+id/resultButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="@string/MyResults"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>
</layout>